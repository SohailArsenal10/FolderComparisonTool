package readFile;

import java.io.File;
import java.io.FileReader;
import java.io.BufferedReader;
import java.io.IOException;

public class readFile {

	public readFile()
	{
		
	}
	
	public void readLines(File f) throws IOException
	{
		BufferedReader br = new BufferedReader(new FileReader(f));
		String line;
		while((line = br.readLine()) != null)
		{
			System.out.println(line);
		}
		br.close();
	}
	
	
	 public int countLines(File f) throws IOException
	{
		BufferedReader br = new BufferedReader(new FileReader(f));
		String line;
		int lineCount = 0;
		while((line = br.readLine()) != null)
		{
			lineCount++;
		}
		br.close();
		return lineCount;
	}
	 
	 
	  public void readLinesIntoArray(File f, int lines1) throws IOException
	{
		BufferedReader br = new BufferedReader(new FileReader(f));
		String line;
		int i = 0;
		String[] arr1 = new String[lines1];
		while((line = br.readLine()) != null)
		{
			arr1[i] = br.readLine();
		}
		br.close();
		System.out.println(arr1);
	}
	  
	 
	public static void main(String[] args)
	{
		readFile rf = new readFile();
		File f = new File("C:\\Spring Workspace\\folderComparisonTool\\src\\readFile\\test.txt");
		try
		{
			int lines1 = rf.countLines(f);
			System.out.println("The number of lines in the file are " + lines1);
			//rf.countLines(f);
			rf.readLinesIntoArray(f,lines1);
			/*System.out.println("Below is the File content");
			System.out.println();
			*/rf.readLines(f);
		}
		catch(IOException ioe)
		{
		   //System.out.println(ioe);
			ioe.printStackTrace();
		}
	}
}
